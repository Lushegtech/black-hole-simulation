#version 330 core

// Vertex shader for fullscreen quad
// This is a simple pass-through shader that creates a screen-filling quad

layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoord;

out vec2 TexCoord;

void main()
{
    gl_Position = vec4(aPos, 1.0);
    TexCoord = aTexCoord;
}
